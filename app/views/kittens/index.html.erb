<p id="notice"><%= notice %></p>

<h1>Kittens index</h1>
<table>
	<tr>
		<th>Name</th>
		<th>Age</th>
		<th>Cuteness</th>
		<th>Softness</th>
	</tr>

	<% @kittens.each do |kitten| %>
		<tr>
			<td><%= kitten.name %></td>
			<td><%= kitten.age %></td>
			<td><%= kitten.cuteness %></td>
			<td><%= kitten.softness %></td>
			<td><%= link_to 'Show me the kitten!', kitten_path(kitten) %></td>
			<td><%= link_to 'Update the kitten!', edit_kitten_path(kitten) %></td>
			<td><%= link_to 'Kill the kitten! :(', kitten_path(kitten),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
			</td>	
	<% end %>
</table>

<%= link_to 'Create a new kitten!', new_kitten_path %>